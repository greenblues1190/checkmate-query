{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ES2020",
		"moduleResolution": "node",
		"types": ["node"],
		"outDir": "./dist",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
